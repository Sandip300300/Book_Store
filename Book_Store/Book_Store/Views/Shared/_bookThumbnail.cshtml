@model BookModel
<div class="card mb-4 shadow-sm">
    <img src="@Model.CoverImageUrl" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title)?"Name is Not availabe":Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description)? "Description is Not availabe" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.ID"
                   class="btn btn-sm btn-outline-secondary">View Details</a>

            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author)?"Name is Not availabe":Model.Author) </small>
        </div>
    </div>

</div>
